<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <!-- Auto wire by name : when the properties and the beans have same name this works -->
    <bean id="triangle" class="com.snow.spring.Triangle" name="triangle-name" autowire="byName">
    </bean>

    <bean id="pointB" class="com.snow.spring.Point">
        <property name="x" value="-20"/>
        <property name="y" value="0"/>
    </bean>

    <bean id="pointC" class="com.snow.spring.Point">
        <property name="x" value="0"/>
        <property name="y" value="20"/>
    </bean>

    <bean id="pointA" class="com.snow.spring.Point">
        <property name="x" value="0"/>
        <property name="y" value="0"/>
    </bean>
    <!-- Aliases -->
    <alias name="triangle" alias="triangle-alias"/>
</beans>